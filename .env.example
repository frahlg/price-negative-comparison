# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ENTSO-E API Key for electricity price data
# Get your API key from: https://transparency.entsoe.eu/usrm/user/createPublicApiKey
ENTSOE_API_KEY=your_entsoe_api_key_here

# xAI API Key for AI-powered CSV format detection
# Get your API key from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# Optional: Set to true for detailed logging
DEBUG=false

# Optional: Custom Flask configuration
FLASK_ENV=development
FLASK_DEBUG=false
